<%- include('partials/header', { q: '' }) %>
<section class="section">
  <h3>Genre: <%= genre %></h3>
  <div class="card-grid">
    <% anime.forEach(a => { %>
      <a class="card" href="/anime/<%= a.slug %>">
        <img src="<%= a.cover_path || '/public/img/placeholder.svg' %>" alt="<%= a.title %>"/>
        <div class="card-body">
          <h4><%= a.title %></h4>
        </div>
      </a>
    <% }) %>
  </div>
</section>
<%- include('partials/footer') %>

